<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.ols.BlankFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/text4"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:id="@+id/textv31" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="State"
                android:textAllCaps="true"
                android:id="@+id/textv33" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="@string/text12"
                android:id="@+id/textv34" />
        </LinearLayout>

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="MAHARASHTRA"
            android:textAllCaps="true"
            android:id="@+id/maha" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="RTO Office"
                android:textAllCaps="true"
                android:id="@+id/textv35" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="@string/text12"
                android:id="@+id/textv36" />
        </LinearLayout>

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="AURANGABAD"
            android:textAllCaps="true"
            android:id="@+id/abad" />



        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Pincode"
            android:textAllCaps="true"
            android:id="@+id/textv37" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/edit31"
            android:hint="@string/text13"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:text="--------------------------------------------------------------------------------"
            android:textColor="@color/Seashell_4"
            android:id="@+id/textv38"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/text14"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textColor="@color/firebrick"
            android:textSize="18dp"
            android:id="@+id/textv39" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Name Of The Applicant"
                android:textAllCaps="true"
                android:id="@+id/textv310" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="@string/text12"
                android:id="@+id/textv311" />
        </LinearLayout>


        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="(to be printed on smartcard)"
            android:textAllCaps="true"
            android:id="@+id/textv312" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/edit32"
            android:inputType="text"
            android:hint="@string/text15"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/edit33"
            android:inputType="text"
            android:hint="@string/text16"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/edit34"
            android:inputType="text"
            android:hint="@string/text17"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Relation"
                android:textAllCaps="true"
                android:id="@+id/textv313" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="@string/text12"
                android:id="@+id/textv314" />
        </LinearLayout>

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@id/spin3"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/edit35"
            android:hint="@string/text15"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/edit36"
            android:hint="@string/text16"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/edit37"
            android:hint="@string/text17"/>


        <TextView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Adhar Number"
            android:textAllCaps="true"
            android:id="@+id/textv315" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:id="@+id/edit38"
            android:hint="@string/text18"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Gender"
                android:textAllCaps="true"
                android:id="@+id/textv320" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="@string/text12"
                android:id="@+id/textv321" />
        </LinearLayout>




        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:paddingTop="20dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/rgroup2">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Male"
                android:textColor="@color/colorPrimary"

                android:id="@+id/rb21" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="Female"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/rb22" />


            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:text="TransGender"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/rb23" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="DATE OF BIRTH"
                android:textAllCaps="true"
                android:id="@+id/textv322" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="@string/text12"
                android:id="@+id/textvdate" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAllCaps="true"
            android:inputType="date"
            android:paddingLeft="16dp"
            android:id="@+id/edit311"
            android:hint="@string/text8"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="QUALIFICATION"
                android:textAllCaps="true"
                android:id="@+id/textv327" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="@string/text12"
                android:id="@+id/textv328" />
        </LinearLayout>

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@id/spin4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BLOOD GROUP"
            android:paddingTop="10dp"
            android:id="@+id/textv329"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@id/spin5"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PHONE NUMBER"
            android:paddingTop="10dp"
            android:id="@+id/textv330"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:id="@+id/edit315"
            android:digits="9876543210"
            android:hint="@string/text21"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EMAIL ID"
            android:paddingTop="10dp"
            android:id="@+id/textv331"
            android:textAllCaps="true"
            android:paddingLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textWebEmailAddress"
            android:paddingLeft="16dp"
            android:id="@+id/edit316"
            android:hint="@string/text22"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="MOBILE NUMBER"
                android:textAllCaps="true"
                android:id="@+id/textv332" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="@string/text12"
                android:id="@+id/textv333" />
        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:paddingLeft="16dp"
            android:id="@+id/edit317"
            android:digits="9876543210"
            android:hint="@string/text23"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:onClick="address"
                android:text="submit"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:cursorVisible="true"
                android:gravity="center"
                android:id="@+id/bt5" />

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:onClick="refreshbtn"
                android:text="Refresh"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:cursorVisible="true"
                android:gravity="center"
                android:id="@+id/bt6" />

            <Button
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:onClick="cancel"
                android:text="Cancel"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:cursorVisible="true"
                android:gravity="center"
                android:id="@+id/bt7" />
        </LinearLayout>




    </LinearLayout>

    </ScrollView>
</FrameLayout>
